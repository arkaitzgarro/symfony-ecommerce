{# View as inline list #}
{% if languages|length > 1 %}
    <ul class="nav navbar-nav navbar-right list-inline">
        {% for language in languages %}
            <li {% if language.iso == app.request.locale %}class="active"{% endif %}>
                <a href="{{ url("store_language_switch", {'iso': language.iso}) }}">
                    {{ language.iso }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}

